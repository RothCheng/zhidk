<% title '直达你的客户' %>
<% meta_keywords '移动你的生意，直达你的客户' %>
<% meta_description '直达电话：18080810818' %>

<!-- Main -->
<div id="main-wrapper">
  <div class="container">
    <div class="row 200%">
      <div class="8u">
        <div id="content">

          <div class="row">
            <% @posts.each do |post| %>
              <div class="4u">
                <!-- Box -->
                <section class="box feature">
                  <a href="<%= post_path(post.id)%>" class="image featured"><img src="<%= post.image_path %>" alt="<%= post.keywords %>" /></a>
                  <div class="inner">
                    <header>
                      <h2><%= post.title %></h2>
                      <p>Maybe here as well I think</p>
                    </header>
                    <p><%= post.description %></p>
                  </div>
                </section>
              </div>
            <% end %>
          </div>

        </div>
      </div>
      <div class="4u">
        <%= render 'layouts/sidebar' %>
      </div>
    </div>
  </div>
</div>  