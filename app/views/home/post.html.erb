<% title @post.title %>
<% meta_keywords @post.title %>
<% meta_description @post.title %>
<!-- Main -->
<div id="main-wrapper">
  <div class="container">
    <div class="row 200%">
      <div class="12u">
        <div id="content">

          <!-- Content -->
          <article>

            <h2><%= @post.title %></h2>
            <hr/>
            <div class="image fit">
              <%= raw @post.get_content %>
            </div>
          </article>

        </div>
      </div>
    </div>
  </div>
</div>  